type Pipolando interface {
	Multiple()
	Divide()
	Addition()
	Modulo()
	Squareroot()
}

type Pengubah struct {
	x float64
	y float64
}

func (a Pengubah) Addition() float64 {
	return a.x + a.y
}

func (m Pengubah) Multiple() float64 {
	return m.x * m.y
}

func (d Pengubah) Divide() float64 {
	return d.x / d.y
}

func hitungPenjumalahn(a Pengubah) {
	fmt.Println("Hasil=", a.Addition())
}
func hitungPerkalian(m Pengubah) {
	fmt.Println("Hasil=", m.Multiple())
}
func main() {

	// hitungPersegi(Persegi{S: 9})
	// hitungPersegiPanjang(PersegiPanjang{panjang: 2, lebar: 9})
	// hitungLingkaran(Lingkaran{Radius: 3.5})

	hitungPenjumalahn(Pengubah{x: 12, y: 3})
	hitungPerkalian(Pengubah{x: 12, y: 3})
}
