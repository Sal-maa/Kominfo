func TestAddition(t *testing.T) {
	t.Logf("Penjumlahan : %v", pengubah.Addition())

	if pengubah.Addition() != addExpected {
		t.Errorf("Salah! Seharusnya : %v", addExpected)
	}
}

func TestMultiple(t *testing.T) {
	t.Logf("Perkalian : %v", pengubah.Multiple())

	if pengubah.Multiple() != mulExpected {
		t.Errorf("Salah! Seharusnya : %v", mulExpected)
	}
}

func TestDivide(t *testing.T) {
	t.Logf("Pembagian : %v", pengubah.Divide())

	if pengubah.Divide() != divExpected {
		t.Errorf("Salah! Seharusnya : %v", divExpected)
	}
}
